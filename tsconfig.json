{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@mediapeek/ui/*": ["./packages/ui/src/*"],
      "@mediapeek/shared/*": ["./packages/shared/src/*"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": [],
  "references": [
    { "path": "./apps/web" },
    { "path": "./apps/analyzer" },
    { "path": "./packages/shared" },
    { "path": "./packages/ui" }
  ]
}
